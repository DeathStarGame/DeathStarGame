#!/bin/bash

shadow(){
    ./node_modules/.bin/shadow-cljs "$@"
}

dev(){
  npm i
  shadow -A:shadow:core:ui:desktop:p2p watch :ui :desktop :p2p
}

server(){
    shadow -A:shadow:core:ui:desktop:p2p server
    # yarn server
}

compile(){
    npm i
    shadow -A:shadow:core:ui:desktop:p2p compile :ui :desktop :p2p
}

release(){
    npm i
    shadow -A:shadow:core:ui:desktop:p2p release :ui :desktop :p2p
}


"$@"