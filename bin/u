#!/bin/bash

clean(){
    rm -rf resources/public/js-out out
}

purge(){
    clean
    rm -rf  .shadow-cljs .cpcache 
}

shadow(){
    ./node_modules/.bin/shadow-cljs "$@"
}

server(){
    shadow -A:ui:ui-dev server
    # yarn server
}

dev(){
    npm i
    shadow -A:ui:ui-dev watch \
    :ui

    # npm i
    # shadow -A:dev watch \
    # :extension
}

tree(){
    clojure -A:ui:ui-dev -Stree
}

compile(){
    npm i
    shadow -A:ui:ui-dev compile  :ui
}

cljs_compile_extension(){
    clj -A:ui:ui-dev -m cljs.main -co build.edn -c deathstar.main
}

cljs_compile_tab_scenario(){
    clj -A:ui:ui-dev -m cljs.main -co build-tab-scenario.edn -v -c # -r
}

fwm(){
    clojure -A:ui:ui-dev \
    -m nrepl.cmdline  \
    --middleware "[cider.nrepl/cider-middleware cider.piggieback/wrap-cljs-repl]" \
    --bind "0.0.0.0" --port 5100
}

"$@"