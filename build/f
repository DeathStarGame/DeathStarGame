#!/bin/bash

clean(){
    rm -rf resources/out out
}

purge(){
    clean
    rm -rf  .shadow-cljs .cpcache 
}

shadow(){
    ./node_modules/.bin/shadow-cljs "$@"
}

server(){
    shadow -A:core:dev server
    # yarn server
}

dev(){
    npm i
    shadow -A:core:dev watch :deathstar-extension :deathstar-bootstrap # :tabapps-space
    # shadow -A:core:dev watch :extension :bootstrap 
}

tree(){
    clojure -A:core:dev:optimized -Stree
}

compile(){
    npm i
    shadow -A:core:dev compile  :deathstar-extension :deathstar-bootstrap
}

dock() {

    docker build -t deathstar.ltee -f Dockerfile .
    docker run  --rm \
                --cpus=4.0 \
                --memory=4g \
                --name deathstar.ltee \
                -it \
                -p 2200:2200 \
                -p 2201:2201 \
                -p 2202:2202 \
                -v "$(pwd)":/ctx/app \
                -v "$(cd ../../ && pwd)":/ctx/code \
                 deathstar.ltee \
                 bash
}


cljs_compile(){
    clj -A:core:dev -m cljs.main -co build.edn -c deathstar.main
}

fwm(){
    clojure -A:core:dev \
    -m nrepl.cmdline  \
    --middleware "[cider.nrepl/cider-middleware cider.piggieback/wrap-cljs-repl]" \
    --bind "0.0.0.0" --port 5100
}

"$@"