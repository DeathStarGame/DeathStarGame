#!/bin/bash


compile(){
  mkdir -p classes
  rm -rf classes/*
  clojure -A:core:dev -m app.alpha.compile
}

test(){
  clojure -A:core:dev:local -m app.alpha.tests
}

dev(){
  compile
  clj -A:core:dev:local -m app.alpha.main
}

permissions(){
    sudo chmod -R 777 tmp/ 
}

dock() {
    docker build -t starnet.app -f Dockerfile ..
    docker run  --rm \
                --name starnet.app \
                -it \
                --network starnet.kafka \
                -p 7788:7788 \
                -v "$(cd ../ && pwd)":/ctx \
                -e "appenv={:optimized false}" \
                 starnet.app \
                 bash
}


"$@"