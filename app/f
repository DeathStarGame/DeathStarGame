#!/bin/bash


compile(){
  mkdir -p classes
  rm -rf classes/*
  clojure -A:core:dev -m dev.compile
}

dev(){
  compile
  clj -A:core:dev -m app.main 
}

permissions(){
    sudo chmod -R 777 tmp/ 
}

dock() {
    docker build -t starnet.app .
    docker run --gpus all \
                --rm \
                --name starnet.app \
                -it \
                --network starnet.kafka \
                -p 7788:7788 \
                -v "$(pwd)":/app/root \
                 starnet.app \
                 bash
}





"$@"