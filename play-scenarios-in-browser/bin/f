#!/bin/bash

clean(){
    rm -rf .shadow-cljs node_modules .cpcache resources/public/js-out .user/.m2/*
}

shadow(){
    ./node_modules/.bin/shadow-cljs "$@"
}

server(){
    shadow -A:core server
    # yarn server
}

test(){
    npm i
    shadow -A:core:dev:local watch test
}

dev(){
    npm i
    shadow -A:core:dev:local watch :app
    # npx shadow-cljs -A:dev:local watch app
    # yarn dev
}

release(){
    npm i
    shadow -A:dev release app
}

compile_tmpl(){
    shadow -A:dev compile :tmpl
}

gen_tmpl(){
    node resources/out/tmpl.js
}

dock() {

    NAME=deathstar.psib
    WORKDIR=/ctx/bin

    docker build -t $NAME --build-arg workdir=$WORKDIR -f Dockerfile ..
    docker run  --rm \
                --cpus=4.0 \
                --memory=4g \
                --name $NAME \
                -it \
                -p 8899:8899 \
                -p 9500:9500 \
                -p 9501:9501 \
                -p 9630:9630 \
                -v "$(cd ../ && pwd)":/ctx \
                -v "$(pwd)"/.user:/root \
                -e "appenv={:optimized false}" \
                 $NAME \
                 bash
}


"$@"